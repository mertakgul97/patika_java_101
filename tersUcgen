package patikaOdev;

import java.util.Scanner;

public class tersUcgen {

	public static void main(String[] args) {
		Scanner scan = new Scanner(System.in);
		System.out.print("Basamak sayısını giriniz: ");
		int n = scan.nextInt();
		for (int i = n; i > 0; i--) {
			for (int j = 0; j < n-i; j++) {
				System.out.print(" ");

			}
			for (int k = 2 * i - 1; k > 0; k--) {
				System.out.print("*");
			}
			System.out.println();
		}

	}

}
